<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.usjt.deswebmob.servicedeskcco.MainActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/buscar_fila"
        android:hint="@string/buscar_fila"
        android:layout_weight="1"/>

    <!-- android:layout_width="0dp" e android:layout_weight="1" necessÃ¡rios para fazer com que o input ocupe a "tela toda" -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botao_buscar"
        android:onClick="buscarChamados"
        />

</LinearLayout>
